.Chat-main__body__message-user
  .Chat-main__body__message-user__name
    = message.user.name
  .Chat-main__body__message-user__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.Chat-main__body__message{data: {message: {id: message.id}}}
  - if message.content.present?
    %p.Message__content
      = message.content
  = image_tag message.image.url, class: 'Message__image' if message.image.present?