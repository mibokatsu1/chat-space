.Chat-main
  .Chat-main__header
    .Chat-main__header__top-contents
      .Chat-main__header__top-contents__group-name
        = @group.name
      .Chat-main__header__top-contents__member-name
        Member : 
        - @group.users.each do |user|
          = user.name
    .Chat-main__header__bottom-contents
      =link_to edit_group_path(@group), class: "group-info__edit-btn" do
        Edit
  .Chat-main__body
    = render @messages
  .Chat-main__footer
    = form_with model: [@group, @message], html: {class: "Chat-main__footer__form"}, local: true do |f|
      .Chat-main__footer__form__input
        = f.text_field :content, class: 'Chat-main__footer__form__input__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('far', 'image', class: 'input-box__icon')
          = f.file_field :image, class: 'input-box__file'
      = f.submit 'Send', class: 'Chat-main__footer__form__send-btn'